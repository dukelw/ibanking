generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Otp {
  id            String   @id @default(uuid())
  code          String // mã OTP sinh ra
  userId        String // liên kết tới user nhận OTP
  transactionId String? // gắn với giao dịch nào (nếu có)
  expiresAt     DateTime // thời hạn hiệu lực (ví dụ 5 phút)
  used          Boolean  @default(false) // đã dùng hay chưa
  createdAt     DateTime @default(now())
}

model EmailSent {
  id        String   @id @default(uuid())
  to        String // email người nhận
  subject   String
  body      String
  userId    String? // liên kết tới user (nếu có)
  status    String   @default("SENT") // SENT, FAILED
  createdAt DateTime @default(now())
}
